    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.10",
